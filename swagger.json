    "components": {
        "schemas": {
            "SportsJersey": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "precio": {
                        "type": "number",
                        "format": "float"
                    },
                    "precio_oferta": {
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "precio_final": {
                        "type": "number",
                        "format": "float"
                    },
                    "country_id": {
                        "type": "integer"
                    },
                    "club_id": {
                        "type": "integer"
                    },
                    "country_name": {
                        "type": "string"
                    },
                    "club_name": {
                        "type": "string"
                    }
                }
            },
            "SportsJerseyInput": {
                "type": "object",
                "required": ["name", "description", "precio", "country_id", "club_id"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "precio": {
                        "type": "number",
                        "format": "float"
                    },
                    "precio_oferta": {
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "country_id": {
                        "type": "integer"
                    },
                    "club_id": {
                        "type": "integer"
                    }
                }
            },
            "Size": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "SizeInput": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Country": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "CountryInput": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Club": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "country_id": {
                        "type": "integer"
                    }
                }
            },
            "ClubInput": {
                "type": "object",
                "required": ["name", "country_id"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "country_id": {
                        "type": "integer"
                    }
                }
            },
            "Order": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "client_id": {
                        "type": "string"
                    },
                    "total": {
                        "type": "number",
                        "format": "float"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderItem"
                        }
                    }
                }
            },
            "OrderItem": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "order_id": {
                        "type": "integer"
                    },
                    "sports_jersey_id": {
                        "type": "integer"
                    },
                    "size_id": {
                        "type": "integer"
                    },
                    "quantity": {
                        "type": "integer"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "OrderInput": {
                "type": "object",
                "required": ["client_id", "items"],
                "properties": {
                    "client_id": {
                        "type": "string"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderItemInput"
                        }
                    }
                }
            },
            "OrderItemInput": {
                "type": "object",
                "required": ["sports_jersey_id", "size_id", "quantity"],
                "properties": {
                    "sports_jersey_id": {
                        "type": "integer"
                    },
                    "size_id": {
                        "type": "integer"
                    },
                    "quantity": {
                        "type": "integer",
                        "minimum": 1
                    }
                }
            }
        }
    }
